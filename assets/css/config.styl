@import 'nib'

/* = Settings
 * ------------------------------------------------------------ */

support-for-ie ?= true

$nav_height = 48px
$nav_color = #2E944D //#008629

$base_color = #fff

$fa-font-path = '../../static/fonts'

/* = Mixins
 * ------------------------------------------------------------ */

background-size(n)
  -webkit-background-size n
  -moz-background-size n
  -o-background-size n
  background-size n

user-select()
  -moz-user-select -moz-none
  -khtml-user-select none
  -ms-user-select none
  -webkit-user-select none
  user-select none

omission()
  white-space nowrap
  text-overflow ellipsis
  overflow hidden

hidden()
  display none
  visibility hidden

visible()
  display block
  visibility visible

fixed-position()
  z-index 10
  position fixed
  top 0
  left 0
  width 100%

font-reset()
  font-family Lato, "Helvetica Neue", sans-serif, "ヒラギノ角ゴ Pro W3", "Hiragino Kaku Gothic Pro W3", "メイリオ", "Meiryo UI", "MS PGothic"

debug_frame()
  min-height 960px
  max-width 640px
  margin-bottom 48px
  border 1px solid
  border-color #e5e6e9 #dfe0e4 #d0d1d5

/* = Animations
 * ------------------------------------------------------------ */

@keyframes stripes
  from
    background-position 40px 0
  to
    background-position 0 0

@keyframes spinner
  0%
    transform rotate(0deg)
  50%
    transform rotate(180deg)
  100%
    transform rotate(360deg)

@keyframes poof
  0%
    transform rotate(0deg)
  25%
    transform rotate(-20deg)
  75%
    transform rotate(20deg)
  100%
    transform rotate(0deg)
